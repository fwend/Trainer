{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row mt-3">
        <div class="col-6" style="margin-left:auto;">
            {{ form_row(form.name) }}
            {{ form_row(form.section) }}
        </div>
        <div class="col-2 text-right">
            <button class="btn btn-primary" type="submit">Add category</button>
        </div>
    </div>
    {{ form_end(form) }}
    <div class="mt-5 mb-5">
        <h4>{{ section }} categories</h4>
        <div class="row">
            {% set half = (categories|length) / 2|round(0, 'ceil') %}
            {% for column in categories|batch(half, '') %}
                <div class="col">
                    <ul class="list-group">
                        {% for category in column %}
                            <li class="list-group-item list-group-item-action">
                                <a href="{{ path('list_challenges', {'category': category.id}) }}">{{ category|lower }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
