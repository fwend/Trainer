{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ adding ? 'Add' : 'Edit' }} Challenge - {{ challenge.category.section }} - {{ challenge.category }}{% endblock %}

{% block body %}
    {{ parent() }}
    {{ form_start(form) }}
    <div class="col mt-5 mx-5">
        {% if adding %}
            <h4>Add challenge</h4>
        {% else %}
            <h4>Edit {{ challenge.name }}</h4>
        {% endif %}
        <div class="mt-3">
            {{ form_row(form.name) }}
            {{ form_row(form.content) }}
            {{ form_row(form.answers) }}
            {{ form_row(form.link) }}
            {{ form_row(form.note) }}
        </div>
        <div class="float-right mt-2">
            <button class="btn btn-primary" type="submit">submit</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
