{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ adding ? 'Add' : 'Edit' }} Challenge - {{ challenge.category.section }} - {{ challenge.category }}{% endblock %}

{% block body %}
    <div class="col mt-5">
        {% if adding %}
            <h4>Add challenge</h4>
        {% else %}
            <h4>Edit {{ challenge.name }}</h4>
        {% endif %}
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.content) }}
        {{ form_row(form.answers) }}
        {{ form_row(form.link) }}
        {{ form_row(form.note) }}
        <div class="float-right">
            <button class="btn btn-primary" type="submit">Add category</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
