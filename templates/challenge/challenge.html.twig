{% extends 'base.html.twig' %}

{% block title %}Challenge - {{ challenge.category.section }} - {{ challenge.category }}{% endblock %}

{% block body %}
    {{ parent() }}
    {{ form_start(form) }}
    <div class="mt-5">
        <div class="mt-3 card">
            <div class="card-header">
                {{ challenge.category.section }}: {{ challenge.category }}
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ challenge }}</h5>
                <p class="card-text">{{ challenge.content }}</p>
                {# {% if challenge.link %} #}
                <a href="{{ challenge.link }}" class="card-link">man page</a>
                {# {% endif %} #}
            </div>
        </div>
        <div class="mt-3">
            {{ form_row(form.answer) }}
        </div>
        <div class="float-right mt-2">
            <button class="btn btn-primary" type="submit">submit</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
