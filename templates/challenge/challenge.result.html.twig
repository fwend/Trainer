{% extends 'base.html.twig' %}

{% block title %}Challenge - {{ challenge.category.section }} - {{ challenge.category }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="mt-5 mx-5">
        <div class="mt-3 card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <span class="text-lowercase">{{ challenge.category.section }} / {{ challenge.category }} / {{ challenge }}</span>
                    {% if challenge.link %}
                        <a href="{{ challenge.link }}" class="card-link">{{ challenge.category }} man page</a>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <p class="card-text"><span class="font-weight-bold">Result for</span>: {{ challenge.content }}</p>
                <div class="card-text row mt-3">
                    <div class="font-weight-bold col-2">Possible answers</div>
                    <div class="col-10">{{ challenge.answers|length ? challenge.answers|first }}</div>
                </div>
                {% set answerNormalized = answer|lower|replace({' ' : ''}) %}
                {% set possibleMatch = false %}

                {% if challenge.answers|length > 1 %}
                    {% for possibleAnswer in challenge.answers[1:] %}
                        {% set isSimilar = answerNormalized == possibleAnswer|lower|replace({' ' : ''}) %}
                        <div class="card-text row">
                            <div class="col-2"></div>
                            <div class="col-10 {{ isSimilar ? 'text-success' : '' }}">{{ possibleAnswer }}</div>
                        </div>
                        {% if possibleMatch == false and isSimilar %}
                            {% set possibleMatch = isSimilar %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
                <div class="card-text row mt-3">
                    <p class="font-weight-bold col-2">Your answer</p>
                    <p class="col-10 {{ possibleMatch ? 'text-success' : '' }}"> {{ answer }}</p>
                </div>
            </div>
        </div>
        {% if challenge.note %}
            <div class="mt-3">
                <div class="alert alert-light">
                    Note: {{ challenge.note }}
                </div>
            </div>
        {% endif %}
        <div class="float-right mt-2">
            <a href="{{ path('take_challenge', {'run' : run.id}) }}" class="btn btn-primary">next challenge</a>
        </div>
    </div>
{% endblock %}
