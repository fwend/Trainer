{% extends 'base.html.twig' %}

{% block title %}Challenge - {{ challenge.category.section }} - {{ challenge.category }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="mt-5">
        <h4>{{ challenge }} result</h4>
        <div class="mt-3">
            {{ challenge.content }}
            {% if challenge.link %}
                <a href="{{ challenge.link }}">link</a>
            {% endif %}
        </div>
        <div class="mt-3">
            {{ challenge.answers }}
        </div>
        <div class="mt-3">
            <p>Your answer</p>
            {{ answer }}
        </div>
        <div class="float-right mt-2">
            <a href="{{ path('take_challenge', {'run' : run.id}) }}" class="btn btn-primary">next</a>
        </div>
    </div>
{% endblock %}
