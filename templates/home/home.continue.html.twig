{% extends 'base.html.twig' %}

{% block title %}Trainer{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="d-flex justify-content-between w-100">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('index') }}">Home</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('list_sections') }}">Admin</a>
                    </li>
                {% endif %}
            </ul>
            <div class="d-flex align-items-center mr-2 text-white">{{ app.user ?? 'anon' }}</div>
        </div>
    </nav>
    <div class="mx-5 mt-5">
        <a href="{{ path('endrun', {'run': run.id}) }}"
           class="btn btn-primary mr-2" type="submit" style="width: 5rem">
            clear
        </a>
        <a href="{{ path('take_challenge', {'run': run.id}) }}" class="btn btn-primary" type="submit">continue</a>
    </div>
{% endblock %}

