{% extends 'base.html.twig' %}

{% block title %}Trainer{% endblock %}


{% block body %}
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="d-flex justify-content-between w-100">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('index') }}">Home</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('list_sections') }}">Admin</a>
                    </li>
                {% endif %}
            </ul>
            <div class="d-flex align-items-center mr-2 text-white">{{ app.user ?? 'anon' }}</div>
        </div>
    </nav>
    {{ form_start(form) }}
    <div class="mt-5 mx-5 jumbotron">
        <h1 class="display-4">Start training run</h1>
        <p class="lead">Choose a training section and pick a mode</p>
        {{ form_row(form.section) }}
        {{ form_row(form.mode) }}
        <p class="lead">
            <button class="btn btn-primary btn-lg" type="submit">Start training</button>
        </p>
    </div>
    {{ form_end(form) }}
{% endblock %}

