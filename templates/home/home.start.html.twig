{% extends 'base.html.twig' %}

{% block title %}Trainer{% endblock %}


{% block body %}
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('index') }}">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('list_sections') }}">Admin</a>
            </li>
        </ul>
    </nav>
    {{ form_start(form) }}
    <div class="mt-5 mx-5 jumbotron">
        <h1 class="display-4">Start challenge run</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to
            featured content or information.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        {{ form_row(form.section) }}
        <p class="lead">
            <button class="btn btn-primary btn-lg" type="submit">Start training</button>
        </p>
    </div>
    {{ form_end(form) }}
{% endblock %}

